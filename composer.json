{
    "name": "zaphyr-org/config",
    "description": "Load configuration files the easy way. This configuration loader supports PHP, INI, JSON, XML and YAML file extensions.",
    "keywords": [
        "config",
        "loader",
        "array",
        "json",
        "yaml",
        "xml",
        "ini"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "merloxx",
            "email": "merloxx@zaphyr.org",
            "homepage": "https://merloxx.it",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-json": "*",
        "ext-libxml": "*",
        "ext-simplexml": "*",
        "symfony/yaml": "^6.2"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-phpunit": "^1.2",
        "phpunit/phpunit": "^10.0",
        "roave/security-advisories": "dev-latest",
        "squizlabs/php_codesniffer": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "Zaphyr\\Config\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Zaphyr\\ConfigTests\\": "tests/"
        }
    },
    "scripts": {
        "cs": "vendor/bin/phpcs --standard=PSR12 -n src",
        "cbf": "vendor/bin/phpcbf --standard=PSR12 -n src",
        "unit": "vendor/bin/phpunit --colors=always",
        "phpstan": "vendor/bin/phpstan analyse --memory-limit 512M",
        "test": [
            "@unit",
            "@phpstan",
            "@cs"
        ]
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
